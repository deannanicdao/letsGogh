<p id="notice"><%= notice %></p>

<h1>The Gallery</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.description %></td>
        <td><%= (item.price * 0.1).to_i%></td>
        <td><%= item.category %></td>
        <% if item.image.attached? %>
          <td><%= cl_image_tag(item.image.key, :width=>500, crop: :scale, cloud_name: 'drlpdxmsc', class: "item-image") %></td>
        <% else %>
          <td><%= image_tag item.image, class: "item-image" %></td>
        <% end %>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Purchase', item %></td>
      </tr>
    <% end %>
  </tbody>
</table>
