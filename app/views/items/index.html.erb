<p id="notice"><%= notice %></p>

<h1>The Gallery</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.description %></td>
        <td><%= item.price %></td>
        <td><%= item.category %></td>
        <!-- Add a username/brand -->
        <!-- <td><%= item.user %></td> --> 
        <td><%= image_tag item.image, class: "item-image" %></td>
        <td><%= link_to 'Show', item %></td>
        <% if can? :manage, item %>
          <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <% end %>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
